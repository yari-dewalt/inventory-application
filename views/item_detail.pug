extends layout

block content

  h1.title= title
  .item-details
    div.item-header
      h1#item-name=item.name
      p#item-amount (x#{item.amount})
    h3 $#{item.price}
    a(href=item.category.url)#item-category=item.category.name
    p#item-description=item.description

  hr
  p
    a(href=item.url+'/update') Update item
  p
    a(href=item.url+'/delete').delete Delete item
