extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='Name of category' name='name' required value=(undefined===category? '' : category.name) )
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(placeholder='Description' name='description' required)= undefined===category ? '' : category.description
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul.errors
      for error in errors
        li!= error.msg
